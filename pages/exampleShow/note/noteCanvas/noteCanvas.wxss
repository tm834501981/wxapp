/* pages/exampleShow/note/noteCanvas/noteCanvas.wxss */
@import "../noteIconfont/iconfont.wxss";
@import "../template/noteBottom.wxss";
.topChoose {
  display: flex;
  justify-content: space-between;
  background-color: #FDDC2D;
  padding: 25rpx 40rpx;
  width: 100%;
  box-sizing: border-box;
}
.changeType {
  border:1rpx solid  #343233;
  border-radius: 20rpx;
  display: flex;
  overflow: hidden;
}
.changeType > view {
  background: #FDDC2D;
  font-size: 26rpx;
  color: #343233;
  padding: 10rpx 20rpx; 
}
.changeType > view.active {
  background: #343233;
  color:#FDDC2D;
}
.changeDate > view {
  padding: 10rpx 40rpx;
  border-right: 1rpx solid #343233;
}
.scrollDate {
  width: 100%;
  white-space: nowrap;
  border-bottom: 1rpx solid #EDECEC;
}
.itemDate {
  display: inline-block;
  color: #C3C3C3;
  font-size: 24rpx;
  padding: 20rpx 50rpx;
}
.itemDate.active {
  color:#333;
  border-bottom: 1rpx solid #333;
}
.canvasDate {
  border-bottom: 1rpx solid #E9E9E9;
  padding: 40rpx;
  color: #727272;
  font-size: 28rpx;
  line-height: 50rpx;
}
.smallFont {
  font-size: 26rpx;
  border-bottom: 1rpx solid #E9E9E9;
  padding-bottom: 20rpx;
}
.canvasShow {
  width:120%;
  height: 300rpx;
  position: relative;
  left: -10%;
}
.titleshow {
  font-size: 28rpx;
  margin: 20rpx 40rpx;
  color:#434142;
}

.infoIcon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background:#FDDC2D;
  font-size:50rpx;
  text-align: center;
  line-height: 80rpx;
  display: block;
  /* color:#FDDC2D; */
}
.rankItem {
  display: flex;
  padding:30rpx;
  justify-content: space-between;
}
.lineShow {
  width: calc(100% - 110rpx);
  border-bottom: 1rpx solid #E3E2E2;
  font-size: 30rpx;
}
.percent {
  margin-left: 20rpx;
}
.topLine {
  overflow: hidden;
}
.lineName,
.percent{
  float: left;
}
.linePrice {
  float: right;
  text-align: right;
}
.lineBorder {
  border-radius: 10rpx;
  background: #FFDA44;
  height: 10rpx;
  margin:10rpx 0rpx 30rpx 0rpx;
}