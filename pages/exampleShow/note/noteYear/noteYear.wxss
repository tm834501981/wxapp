@import "../noteIconfont/iconfont.wxss";
@import "../template/noteBottom.wxss";
.YearShow {
  background:#FDDC2D;
  padding: 40rpx 0rpx;
}
.Balance {
  text-align: center;
  color:#82773C;
  font-size: 22rpx;
}
.BalanceMoney {
  text-align: center;
  font-size:46rpx;
  line-height: 100rpx;
}
.BalanceItem {
  color:#82773C;
  font-size: 22rpx;
  width:50%
}
.BalanceItem:first-child {
  text-align: right;
}
.BalanceItem > text {
  color: #000;
  font-size: 30rpx;
}
.BalanceDetail {
  display: flex;
  justify-content: space-around;
}
.lineShow {
  border-right: 1rpx solid #82773C;
  height:30rpx;
  margin:0 30rpx;
  position: relative;
  top:7rpx;
}
.detailTitle {
  display: flex;
  border-bottom:1rpx solid #D9D9D9;
}
.detailTitle > view{
  width:25%;
  text-align: center;
  font-size: 22rpx;
  color:#A6A6A6;
  padding: 15rpx 0rpx;
  box-sizing:border-box;
}

.detailScroll {
  display: flex;
  border-bottom: 1rpx solid #EBEBEB;
}

.detailScroll > view  {
  width:25%;
  text-align: center;
  font-size: 22rpx;
  color:#333;
  padding: 20rpx 0rpx;
  box-sizing:border-box;

}

.detailScroll > view:first-child {
  color: #6C6C6C;
}

.scrollView {
  width: 100%;
  height:calc(100vh - 410rpx);
}

.pickerYear {
  position: absolute;
  top: 40rpx;
  right: 45rpx;
  display: inline-block;
  font-size: 28rpx;
}