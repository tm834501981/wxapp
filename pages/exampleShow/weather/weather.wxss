/* pages/exampleShow/weather/weather.wxss */

image {
  display: block;
  vertical-align: middle;
}
page {
  background: #F6F5F5;
}
.bgimage {
  width:100%;
}
.mainbg {
  position: relative;
}
.content {
  position: absolute;
  width: 100%;
  top:0;
  left:0;
  color:white;
  font-size: 36rpx;
  padding-top:40rpx;
}
.address {
 text-align: center;
}
.address > image {
  width:38rpx;
  vertical-align: middle;
  display: inline-block;
  position: relative;
  top:-4rpx;
  margin-right: 2rpx;
}
.health {
  width:105rpx;
  height:100rpx;
  text-align: center;
  border-radius: 15rpx;
  font-size: 32rpx;
  margin-left: 30rpx;
  margin-top: 100rpx;
  padding-top:5rpx;
}
.number {
  text-align: center;
  font-size: 100rpx;
  position: relative;
  margin-top:60rpx;
}
.number:after {
  display: block;
  content:"";
  border:10rpx solid #fff;
  border-radius: 50%;
  width:25rpx;
  height: 25rpx;
  position: absolute;
  right:35%;
  top:8%;
}
.weatherchinese {
  font-size: 50rpx;
  text-align: center;
}
.weatherSwiper {
  text-align: center;
  height: 50rpx;
  margin-top: 10rpx;
}
.tips {
  text-align: center;
  width:77%;
  margin:300rpx auto 0 auto;
}
.twodays{
  background: #fff;
  padding: 30rpx 10rpx;
  border-bottom: 1rpx solid #E6E5E5;
}
.twodays,
.days,
.daysweather{
  display: flex;
  justify-content: space-between;
}
.today {
  width:50%;
  box-sizing: border-box;
  padding: 0rpx 30rpx;
}
.today:first-of-type{
  border-right: 1rpx solid #EAEAEA;
}
.daysweather > image {
  width:80rpx;
  vertical-align: middle;
}
.word {
  line-height: 90rpx;
}
.weatherinfo ,
.houersInfo {
  margin-top: 30rpx;
  background: #fff;
  border-top:1rpx solid #E6E5E5;
  border-bottom: 1rpx solid #E6E5E5;
  overflow: hidden;
}
.weatherinfo {
  padding:18rpx 0rpx 0rpx 0rpx;
}
.lifetypeItem {
  width:25%;
  box-sizing: border-box;
  border-bottom:1rpx solid #E6E5E5;
  border-right:1rpx solid #E6E5E5;
  padding:30rpx 0rpx;
}
.icontype {
  width:60rpx;
  margin: 0 auto;
}
.lifestyle {
  display: flex;
  flex-wrap:wrap;
  margin-top:30rpx;
  background: #fff;
  text-align: center;
  border-top:1rpx solid #E6E5E5;
  border-left:1rpx solid #E6E5E5;
}

.life {
  color:#333;
  font-size: 28rpx;
  margin-top:10rpx;
}
.lifetitle {
  color:#9F9F9F;
  font-size:20rpx;
  margin-top:5rpx;
}
.showbg  {
  width:100%;
  height: 100%;
  position: fixed;
  top:0;
  left:0;
  background: rgba(179, 179, 180, 0.3)
}
.showbgBlur {
  filter: blur(2px);
}
.showLifeInfo {
  width:80%;
  background: white;
  border-radius: 15rpx;
  position: absolute;
  top:50%;
  left: 50%;
  transform: translate(-50%,-50%);
  overflow: hidden;
}
.showLifeTitle {
  text-align: center;
  line-height: 100rpx;
  font-size: 38rpx;
  background: #DEC89D;
  color: white;
  border-radius: 15rpx 15rpx 0rpx 0rpx;
}
.showLifedes {
  margin:60rpx 50rpx;
  line-height: 50rpx;
}
.showLifeBtn {
  width:80%;
  margin:0 auto 50rpx auto;
  text-align: center;
  line-height: 80rpx;
  font-size: 32rpx;
  background: #DEC89D;
  color: white;
  border-radius: 15rpx;
}
.closeair {
  width:30rpx;
  position: absolute;
  right:20rpx;
  top:20rpx;
}
.topbg {
  background-image: url('http://www.tminlife.cn/wxapp/weatherbg.png');
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: center bottom;
  width:100%;
  height:500rpx;
  color: white;
  text-align: center;
  border-radius: 15rpx 15rpx 0rpx 0rpx;
}
.airtitle {
  font-size: 38rpx;
  padding-top:80rpx;
}
.airaqi {
  font-size: 140rpx;
  margin:30rpx 0rpx; 
}
.airword {
  font-size: 38rpx;
  width:100rpx;
  line-height: 60rpx;
  border-radius: 10rpx;
  margin:10rpx auto;
}
.otherAir {
  background: #fff;
  display: flex;
  border-radius:0rpx 0rpx 15rpx 15rpx;
}
.otherAir:last-of-type {
  border-top: 1rpx solid #EAEAEA;
}
.otherItem {
  width:33.3%;
  border-right: 1rpx solid #EAEAEA;
  text-align: center;
  padding:30rpx;
}
.otherItem:last-of-type{
  border-right: 0rpx;
}
.otherItem > view:first-of-type{
  font-size:36rpx;
}
.otherItem > view:last-of-type{
  font-size:28rpx;
  margin-top:10rpx;
  color:#BCBCBC;
}
.hoursItem {
  font-size:36rpx;
  display: inline-block;
  text-align: center;
  padding: 30rpx 40rpx;
  color:#333;
}
.hoursItem > image {
  width: 80rpx;
  margin:10rpx auto;
}
.hoursItem > view:first-of-type {
  color:#999999;
  font-size:32rpx;
}
.sun {
  display: flex;
  justify-content: space-between
}
.sunitem {
 color:#999999;
 text-align: center;
 padding:0rpx 18rpx;
 font-size:28rpx;
}
.sunitem {
  margin:3rpx 0rpx;
}
.sunitem > image {
  width:80rpx;
  margin-top:15rpx;
}
.sunweather {
  margin:15rpx 0rpx;
  color:#333;
  font-size:32rpx;
}
.canvesImg {
  width:103%;
  height:350rpx;
