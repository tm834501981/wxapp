/* pages/user/user.wxss */
.top {
  width: 100%;
  height:200rpx;
  border-radius: 0 0 150rpx 150rpx;
  background: linear-gradient(to top,#545776 0%,#545776 100%);
  vertical-align: middle;
  position: relative;
}
.avatur > image {
  position: absolute;
  top: 105rpx;
  left:50%;
  transform: translateX(-50%);
  width:150rpx;
  height: 150rpx;
  border-radius: 50%;
  border: 5rpx solid  #545776;
}
.info {
  position: absolute;
  top:270rpx;
  left:50%;
  transform: translateX(-50%);
  text-align: center;
  width: 100%;
}
.name {
  font-size: 30rpx;
  word-break: break-all;
  display: inline-block;
}
.female {
  width:40rpx;
  height: 40rpx;
  vertical-align: middle;
  margin-left: 4rpx;
  position: relative;
  top:-3rpx;
}

.content {
  /* border-top:1px solid #eee; */
  margin-top:150rpx;
  padding-top:20rpx;
  display: flex;
  flex-wrap:wrap;
}
.msgitem {
  box-shadow: 0rpx 0rpx 10rpx #ccc;
  width:340rpx;
  overflow: hidden;
  margin-left:20rpx;
  margin-bottom: 30rpx;
}
.imgShow{
  width:100%;
  height:200rpx;
  overflow: hidden;
}
.msgitem image{
  width:100%;
}
.word {
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  padding:2rpx 6rpx;
}
.likeIcon image {
  width:35rpx;
  vertical-align: middle;
}